        "cwd": "apps-example/budget-allocation",
        "env": {
          "NODE_ENV": "production"
        }
      },
      "backend": {
        "host": "localhost", 
        "port": 3000,
        "name": "Backend (Fastify)",
        "command": "bun run start:prod",
        "cwd": "apps-example/budget-allocation-server",
        "env": {
          "NODE_ENV": "production",
          "PORT": "3000"
        }
      }
    }
  },

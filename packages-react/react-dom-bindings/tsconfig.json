{
    "extends": "./tsconfig.paths.json",
    "compilerOptions": {
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "emitDeclarationOnly": true,

        "moduleResolution": "Bundler",
        "baseUrl": "./",
        "typeRoots": [
            "../../node_modules/@types",
            "../../node_modules/"
        ],
        "types": [
            "react"
        ],
        // Skip lib check
        "skipLibCheck": true
    }
}

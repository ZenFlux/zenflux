{
    // Extends the configuration from "./tsconfig.paths.json"
    "extends": "./tsconfig.paths.json",

    // Compiler options
    "compilerOptions": {
        "types": [
            "node"
        ],

        "typeRoots": [
            "../../node_modules/@types"
        ],

        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "emitDeclarationOnly": true,

        "moduleResolution": "bundler",

        "strict": true,

        "esModuleInterop": true,

        // Skip lib check
        "skipLibCheck": true
    },
}

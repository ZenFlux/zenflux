{
    "extends": ["../../tsconfig.json", "./tsconfig.paths.json"],
    "compilerOptions": {
        "types": [
            "node"
        ],

        "typeRoots": [
            "../../node_modules/@types"
        ],

        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "emitDeclarationOnly": true,

        "moduleResolution": "bundler",

        "strict": true,

        "esModuleInterop": true,

        // Skip lib check
        "skipLibCheck": true
    },
}

{
    "compilerOptions": {
        "rootDir": ".",

        // Save `.tsbuildinfo` files to allow for incremental compilation of projects.
        "incremental": true,

        "outDir": "dist",
        // Specifies the ECMAScript version to transpile to (e.g., ESNext)
        "target": "ESNext",
        // Specifies the module system used in the code (e.g., ESNext)
        "module": "ESNext",
        // Defines how TypeScript resolves module import paths (Node.js style)
        "moduleResolution": "bundler",
        // Enable default imports from modules with no default export
        "esModuleInterop": true,
        // Skip lib check
        "skipLibCheck": true,

        "allowJs": false,

        "types": [
            "node",
            "react"
        ],
        "typeRoots": [
            "../../node_modules/@types",
            "../../node_modules"
        ]
    },
    "include": [
        "zenflux.config.ts",
        "src/**/*.ts"
    ],
    "exclude": [
        "dist/**/*",
    ]
}

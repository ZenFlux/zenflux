{
    "$schema": "https://raw.githubusercontent.com/SchemaStore/schemastore/master/src/schemas/json/package.json",
    "name": "@zenflux/zenflux",
    "author": "Leonid Vinikov <leonidvinikov@gmail.com> (https://github.com/iNewLegend)",
    "license": "MIT",
    "type": "module",
    "version": "0.1.0",
    "keywords": [
        "zenflux",
        "commands",
        "commands manager",
        "typescript node vm",
        "rx state manager",
        "logging"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/zenflux/zenflux.git"
    },
    "workspaces": [
        "packages/*",
        "packages-react/*",
        "apps-example/*"
    ],
    "scripts": {
        "@z-workspace:eslint": "eslint .",
        "@z-workspace:eslint:bun": "bunx --bun eslint .",
        "@z-workspace:dev": "@z-cli @watch --dev",
        "@z-workspace:core-packages:typescheck": "bun run @z-cli @typecheck --workspace \"(?:^|[\\\\\\\\/])packages(?:[\\\\\\\\/]|$)\", --verbose --debug",
        "@z-workspace:core:build": "@z-cli @build --workspace core",
        "@z-workspace:react:build": "@z-cli @build --workspace react-* --dev",
        "@z-workspace:react:dev": "@z-cli @watch --workspace react-* --dev",
        "@z-workspace:react-reconciler-dev": "@z-cli @watch --workspace react-reconciler --dev",
        "@z-workspace:react:eslint:ci": "time ( bunx --bun eslint packages-react --cache --cache-strategy content )",
        "@z-workspace:react:test:ci": "time ( @z-jest --ci --bail --selectedProjects react-test-renderer,react-cache,react-scheduler,internal-test-utils,react-reconciler )",
        "@z-workspace:react:build:ci": "time ( @z-cli @build --workspace \"react-*\" --haltOnDiagnosticError )",
        "@z-examples:budget-allocation:dev": "node scripts/app-examples/budget-allocation/run-dev.js",
        "@z-examples:budget-allocation:prod": "node scripts/app-examples/budget-allocation/run-prod.js"
    },
    "dependencies": {
        "@zenflux/cli": "workspace:*",
        "@zenflux/eslint": "workspace:*",
        "@zenflux/core": "workspace:*",
        "@zenflux/jest": "workspace:*",
        "@zenflux/logging": "workspace:*",
        "@zenflux/react-commander": "workspace:*",
        "@zenflux/react-ui": "workspace:*",
        "@zenflux/runner": "workspace:*",
        "@zenflux/tsconfig-to-swc": "workspace:*",
        "@zenflux/typescript-vm": "workspace:*",
        "@zenflux/utils": "workspace:*",
        "@zenflux/app-budget-allocation": "workspace:*",
        "@zenflux/budget-allocation-server": "workspace:*",
        "@zenflux/react-cache": "workspace:*",
        "@zenflux/react-dom-bindings": "workspace:*",
        "@zenflux/react-internal-test-utils": "workspace:*",
        "@zenflux/react-jest": "workspace:*",
        "@zenflux/react-noop-renderer": "workspace:*",
        "@zenflux/react-reconciler": "workspace:*",
        "@zenflux/react-scheduler": "workspace:*",
        "@zenflux/react-shared": "workspace:*",
        "@zenflux/react-test-renderer": "workspace:*",
        "@zenflux/react-x-env": "workspace:*"
    },
    "devDependencies": {
        "ajv": "^8.17.1",
        "dotenv": "^17.2.3",
        "eslint": "latest",
        "eslint-import-resolver-typescript": "^4.4.4",
        "ssh2": "^1.17.0"
    }
}

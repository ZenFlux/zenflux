{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "composite": true,
        "outDir": "./src",
        "types": [
            "node"
        ],
        "typeRoots": [
            "../../node_modules/@types"
        ],
        "declaration": true,
        "emitDeclarationOnly": true,
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "baseUrl": "./",
        "allowJs": true,
        "allowArbitraryExtensions": false,
        "skipLibCheck": true
    },
    "include": [
        "src/*.js"
    ],
    "exclude": [
        "node_modules"
    ]
}
